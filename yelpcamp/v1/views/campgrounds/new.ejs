<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center">
			Create a New Campground
		</h1>
		<div style="width:30%;margin:20px auto;">
			<form method="POST" action="/campgrounds">
				<div class="form-group">
					<label>Campground Name</label>
					<input class="form-control" type="text" placeholder="Campground name" name="name"/>	
				</div>
				<div class="form-group">
					<label>Campground Price</label>
					<input class="form-control" type="number" placeholder="Campground price" name="price"
						   min="0.01" step="0.01"/>	
				</div>
				<div class="form-group">
					<label>Image Url</label>
					<input class="form-control" type="text" placeholder="url here" name="image"/>
				</div>
				<div class="form-group">
					<label>Description</label>
					<input class="form-control" type="text" placeholder="describe" name="description"/>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
						Submit
					</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
		
		
	</div>
</div>

<%- include("../partials/footer") %>