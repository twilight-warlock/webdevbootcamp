<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center">
			Edit <%=data.name%>
		</h1>
		<div style="width:30%;margin:20px auto;">
			<form method="POST" action="/campgrounds/<%=data._id%>?_method=PUT">
				<div class="form-group">
					<label>Campground Name</label>
					<input class="form-control" type="text" value="<%=data.name%>" name="campground[name]"/>
				</div>
				<div class="form-group">
					<label>Campground Price</label>
					<input class="form-control" type="number" name="campground[price]" value="<%=data.price%>"
						   min="0.01" step="0.01"/>
				<div class="form-group">
					<label>Image Url</label>
					<input class="form-control" type="text" value="<%=data.image%>" name="campground[image]"/>
				</div>
				<div class="form-group">
					<label>Description</label>
					<input 
						class="form-control" 
						type="text" 
						value="<%=data.description%>" 
						name="campground[description]"
					/>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">
						Submit
					</button>
				</div>
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>
		
		
	</div>
</div>

<%- include("../partials/footer") %>