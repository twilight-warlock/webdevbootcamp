<%- include("partials/header") %>

<div class="container">
	<div class="row head">
		<div class="col-sm-8 offset-sm-2">
			<div class="card">
				<div class="card-header text-white bg-primary">
				  <h2>Edit <%=blog.title %></h2>
				</div>
			</div>
			
			<div class="card-body">
				<form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
					<div class="form-group row">
						<label class="col-md-2 col-form-label">
							Title :
						</label>
						<div class="col-12 col-md-10">
							<input
							  type="text"
							  name="blog[title]"
							  class="form-control"
							  id="title"
							  value="<%=blog.title%>"
							/>
						</div>
					</div>
					<div class="form-group row">
						<label class="col-md-2 col-form-label">
							Image URL :
						</label>
						<div class="col-12 col-md-10">
							<input
							  type="text"
							  name="blog[image]"
							  class="form-control"
							  id="image"
							  value="<%=blog.image%>"
							/>
						</div>
					</div>
					<div class="form-group row">
						<label class="col-md-2 col-form-label">
							Blog Content :
						</label>
						<div class="col-12 col-md-10">
							<textarea
								name="blog[body]"
								class="form-control"
								required
								rows="5"	
								/><%=blog.body%>
							</textarea>
						</div>
					</div>
				
					<div class="form-group row">
					  <div class="offset-md-2 col-md-10">
						<input type="submit" class="btn btn-primary btn-lg">
					  </div>
					</div>
				</form>
			</div>
		</div>
	</div>
	
</div>

<%- include("partials/footer") %>